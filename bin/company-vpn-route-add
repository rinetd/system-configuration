##



#  get ppp0's ip
ifconfig ppp0 > /dev/null 2>&1
if [ $? -ne 0 ]; then
	echo "ppp0 doesn't exist"
	exit 1
fi

# add route for internal ip
ppp0ip=`ifconfig ppp0|grep inet|awk '{print $2}'`
sudo route add 192.168.100.0/24 ppp0ip

exit 0
