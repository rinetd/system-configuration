#!/usr/bin/env python
#-*- coding:utf-8 -*-


import commands

filetypes_dict = [
    {'regrex': '*.h',
     'filename': "h"
    },
    {'regrex': '*.c',
     'filename': "c"
    },
    {'regrex': '*.cpp',
     'filename': "cpp(cpp)"
    },
    {'regrex': '*.cc',
     'filename': "cpp(cc)"
    },

    {'regrex': '*.py',
     'filename': "python"
    },
    {'regrex': '*.el',
     'filename': "elisp"
    },
    {'regrex': '*.js',
     'filename': "javascript"
    }
]


for filetype in filetypes_dict:
    ret_code,file_lines = commands.getstatusoutput(\
                                   'find ./ -name \'' + filetype["regrex"]  + "\'" \
                                   ' -print0 | xargs -0  wc -l | tail -n 1 | ' \
                                    "awk '{print $1}'")
    if file_lines+"x" != "x":
        # >右对齐
        print('{0:>10}: {1:>7}'.format(filetype['filename'], file_lines)) 
        


