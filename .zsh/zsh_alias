# 命令别名
# alias cp='cp -i'
# using htop instead of top
alias top='htop'
alias mv='mv -i'
alias rm='rm -i'
alias ls='ls -F '
alias cls='reset '


alias ll='ls -l'
alias grep='grep --color=auto -n'
alias g-compile='cd ~/.personal/compile'
alias g-trash='cd ~/.local/share/Trash/files'

alias vi='vim'

alias reset='clear'


# 重新设置一下pwd，这个是我自己写的命令，可以用来直接将当前目录copy到剪贴板
alias pwd='pwd.sh'
# 将zsh设置成我的主目录下面的zsh，防止以后我要自己重新编译zsh
#alias zsh='~/bin/zsh'




