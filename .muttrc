#编辑器 直接在 Mutt 的终端里使用非图形界面的 Emacs (emacs -nw)
set editor="vim"
#set editor="emacsclient -nw %s"

# 设置邮件发送程序，这里使用msmtp
set sendmail="/usr/local/bin/msmtp"
set envelope_from=yes

# 邮箱目录相关的设置
source ~/.mutt/boxes

# # 自定义界面颜色
#source ~/.mutt/color
source ~/.mutt/colors
#source ~/.mutt/mutt-colors-solarized/mutt-colors-solarized-light-16.muttrc
# #mutt-colors-solarized


# # index界面的显示设置,包括邮件列表的添加
# source ~/.mutt/show

# #地址簿
# source ~/.mutt/address


# # 给邮件进行打分
# source ~/.mutt/score

# # 键绑定
# source ~/.mutt/binds

# # 字符编码设置
# source ~/.mutt/charsets

# # Check my mutt-specific mailcap before consulting the system-wide one.
# set mailcap_path="${HOME}/.mutt/mailcap:/etc/mailcap"

# # 其他设置
# source ~/.mutt/misc

# set up the sidebar, default not visible
source ~/.mutt/sidebar

