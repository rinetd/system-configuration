# -*- muttrc -*-
#
# mail box settings for mutt.
# List of folders that are considered to be "mailboxes" (folders that
# receive incoming mail).
#

# Maildir格式
set mbox_type=Maildir           
# 本地缓存目录，加速mutt的打开
set header_cache = ~/.Mail/cache/headers
set message_cachedir = ~/.Mail/cache/bodies


#mailboxes ! 

#建立信箱
# 邮件目录,本地的收件箱，如果不设置发送邮件的时候会提示
set folder="~/.Mail/"
# set mask="!^\\.[^.]"
# set mbox=+Inbox
# set mbox="~/.Mail/Inbox/"
# set record="+.Sent"
# set postponed="+.Drafts"
# set spoolfile = +Inbox

# 默认的信箱
mailboxes = +Inbox
# set spoolfile="~/.Mail/Inbox/"
# set mbox=+Inbox                           # Default mailbox.
mailboxes =INBOX \
		  =Sent \
		  =Drafts \
		  =Junk \
		  =Trash \
		  =Lastfolder
# 进入mutt后默认使用的信箱，可以考虑和$HOME/.procmailrc设置的默认信箱相同
# default location of new mail
# set spoolfile=~/.Mail/Inbox
# set spoolfile=~/.mutt/Inbox		  # set spoolfile="~/.Mail/Inbox/"

